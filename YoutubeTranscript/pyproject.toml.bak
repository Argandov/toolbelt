[tool.poetry]
name = "get-yt-transcript.py"
version = "0.1.0"
description = "Simple Tool for extracting (printing to stdout) Youtube video transcripts"
authors = ["Argandov"]
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.12"
certifi = "2024.2.2"
charset-normalizer = "3.3.2"
idna = "3.6"
requests = "2.31.0"
urllib3 = "2.2.1"
youtube-transcript-api = "0.6.2"


[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
